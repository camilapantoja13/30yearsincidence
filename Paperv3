plot_poisson_adjusted(ethnicity_results_tertile_clean, "Ischaemic")
plot_poisson_adjusted(ethnicity_results_tertile_clean, "PICH")
plot_poisson_adjusted(ethnicity_results_tertile_clean, "SAH")

