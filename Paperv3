# Keep only valid age groups (20+)
valid_age_groups <- c(
  "20-24", "25-29", "30-34", "35-39", "40-44", "45-49",
  "50-54", "55-59", "60-64", "65-69", "70-74", "75-79",
  "80-84", "85+"
