install.packages("dplyr")
install.packages("tidyr")
install.packages("glue")
install.packages("kableExtra")

library(dplyr)
library(tidyr)
library(glue)
library(kableExtra)

# Prepare Crude Data
crude_long <- crude_incidence_by_type_ethnicity %>%
  mutate(label = paste0(stroke_type, "_Crude")) %>%
  mutate(value = glue("{round(crude_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year, sex, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

# Prepare ESP Data
esp_long <- esp_incidence_by_type_ethnicity %>%
  mutate(label = paste0(stroke_type, "_ESP")) %>%
  mutate(value = glue("{round(std_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year, sex, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

# Add All Stroke Crude
all_crude <- crude_incidence_sex_ethnicity_yearly %>%
  mutate(label = "All_Crude") %>%
  mutate(value = glue("{round(crude_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year, sex, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

# Add All Stroke ESP
all_esp <- esp_yearly_output %>%
  mutate(label = "All_ESP") %>%
  mutate(value = glue("{round(std_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year, sex, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

# Join everything
final_table <- all_crude %>%
  full_join(all_esp, by = c("year", "sex", "ethnicity")) %>%
  full_join(crude_long, by = c("year", "sex", "ethnicity")) %>%
  full_join(esp_long, by = c("year", "sex", "ethnicity")) %>%
  arrange(year, ethnicity, sex)

# Format nicely
table_rendered <- final_table %>%
  kbl(caption = "Supplementary Table 3: Crude and ESP Stroke Incidence per 100,000 (1995–2024)",
      align = "l", booktabs = TRUE, longtable = TRUE) %>%
  kable_styling(latex_options = c("repeat_header", "striped", "hold_position"), full_width = FALSE)

