    age_group = Age.Range,
    population = Total
  ) %>%
  mutate(
    year = as.integer(year),
    population = as.numeric(population),
    age_group = gsub(" - ", "-", age_group)
  ) %>%
  filter(!is.na(year) & year < 2025)

