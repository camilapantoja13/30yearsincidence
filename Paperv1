# Table 3 and S3 by subtypes

library(dplyr)

slsr_clean_strokes <- slsr_clean_second %>%
  mutate(
    stroke_type = case_when(
      subtype %in% 1:5 ~ "Ischaemic",
      subtype == 6 ~ "PICH",
      subtype == 7 ~ "SAH",
      is.na(subtype) & strksub == 1 ~ "Ischaemic",
      is.na(subtype) & strksub == 2 ~ "PICH",
      is.na(subtype) & strksub == 3 ~ "SAH",
      is.na(subtype) & is.na(strksub) & stroke == 1 ~ "Ischaemic",
      TRUE ~ "Unknown"
    )
  )
library(lubridate)

stroke_counts_by_type <- slsr_clean_strokes %>%
  filter(age >= 20) %>%
  mutate(
    sex = factor(sex, levels = c(1, 2), labels = c("Male", "Female")),
    age_group = case_when(
      age >= 20 & age < 25 ~ "20-24",
      age >= 25 & age < 30 ~ "25-29",
      age >= 30 & age < 35 ~ "30-34",
      age >= 35 & age < 40 ~ "35-39",
      age >= 40 & age < 45 ~ "40-44",
      age >= 45 & age < 50 ~ "45-49",
      age >= 50 & age < 55 ~ "50-54",
      age >= 55 & age < 60 ~ "55-59",
      age >= 60 & age < 65 ~ "60-64",
      age >= 65 & age < 70 ~ "65-69",
      age >= 70 & age < 75 ~ "70-74",
      age >= 75 & age < 80 ~ "75-79",
      age >= 80 & age < 85 ~ "80-84",
      age >= 85 ~ "85+"
    )
  ) %>%
  count(year, sex, ethnicity, age_group, stroke_type, name = "cases")

# Fix Other
# 1. Extract 1995 "Other" cases
other_1995_by_type <- stroke_counts_by_type %>%
  filter(year == 1995, ethnicity == "Other")

# 2. Total excess cases (to be reduced to 21)
total_other_1995 <- sum(other_1995_by_type$cases)

# 3. Proportions by sex, age group, stroke type
other_props <- other_1995_by_type %>%
  mutate(prop = cases / total_other_1995)

# 4. Reassign correct 21 cases proportionally
corrected_other <- other_props %>%
  mutate(cases = round(prop * 21)) %>%
  select(year, sex, ethnicity, age_group, stroke_type, cases)

# 5. Replace "Other" 1995 and bind corrected version
stroke_counts_fixed <- stroke_counts_by_type %>%
  filter(!(year == 1995 & ethnicity == "Other")) %>%
  bind_rows(corrected_other)

# 6. Reassign leftover cases to "White", split by sex and stroke type
misassigned_total <- total_other_1995 - 21

# Split evenly by sex and stroke type
white_reassign <- other_1995_by_type %>%
  group_by(sex, stroke_type) %>%
  summarise(prop = sum(cases) / total_other_1995, .groups = "drop") %>%
  mutate(
    year = 1995,
    ethnicity = "White",
    age_group = NA_character_,  # we are not splitting by age
    cases = round(prop * misassigned_total)
  ) %>%
  select(year, sex, ethnicity, age_group, stroke_type, cases)

# Add to cleaned counts
stroke_counts_fixed <- stroke_counts_fixed %>%
  bind_rows(white_reassign)


#Rename columns of population
population_by_age_ethnicity_sex_imported <- population_by_age_ethnicity_sex_imported %>%
  rename(
    year = Year,
    sex = Sex,
    ethnicity = Ethnicity,
    age_group = Age.Range,
    population = Total
  )

# Crude incidence
population_sex_ethnicity <- population_by_age_ethnicity_sex_imported %>%
  group_by(year, sex, ethnicity) %>%
  summarise(population = sum(population, na.rm = TRUE), .groups = "drop")

crude_cases_by_type <- stroke_counts_fixed %>%
  group_by(year, sex, ethnicity, stroke_type) %>%
  summarise(cases = sum(cases), .groups = "drop")

crude_incidence_by_type_ethnicity <- crude_cases_by_type %>%
  left_join(population_sex_ethnicity, by = c("year", "sex", "ethnicity")) %>%
  mutate(
    crude_rate = (cases / population) * 100000,
    se = sqrt(cases) / population * 100000,
    lower_ci = pmax(0, crude_rate - 1.96 * se),
    upper_ci = crude_rate + 1.96 * se
  )

