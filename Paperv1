total_other_cases <- sum(other_1995_sex_age$cases)

# 3. Proportions by age and sex
proportions_other_1995 <- other_1995_sex_age %>%
  mutate(prop = cases / total_other_cases)
# 4. Reassign only 21 cases correctly across age/sex
corrected_other_1995 <- proportions_other_1995 %>%
  mutate(cases = round(prop * 21)) %>%
  select(year, sex, ethnicity, age_group, cases)

# 5. Replace the "Other" cases for 1995
