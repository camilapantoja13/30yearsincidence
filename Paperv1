  janitor::clean_names() %>%
  rename(
    year = year,  # Confirm this is correct, sometimes it's Year
    ethnicity = ethnicity,
    sex = sex,
    age_group = age_range,  # This might be "age_range" after cleaning
    population = total
  ) %>%
  mutate(
