# == Suplemmentary Table is too long is I've planned it before, lets see some other options ==

library(dplyr)
library(glue)
library(tidyr)
library(kableExtra)

# 1. Create year bands
create_year_band <- function(year) {
  start <- year - ((year - 1995) %% 2)
  end <- start + 1
  glue("{start}–{end}")
}

# Add year bands
crude_band <- crude_incidence_by_type_ethnicity %>%
  mutate(year_band = create_year_band(year)) %>%
  group_by(year_band, ethnicity, stroke_type) %>%
  summarise(
    cases = sum(cases),
    population = sum(population),
    crude_rate = (cases / population) * 100000,
    se = sqrt(cases) / population * 100000,
    lower_ci = pmax(0, crude_rate - 1.96 * se),
    upper_ci = crude_rate + 1.96 * se,
    .groups = "drop"
  ) %>%
  mutate(label = paste0(stroke_type, "_Crude"),
         value = glue("{round(crude_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year_band, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

esp_band <- esp_incidence_by_type_ethnicity %>%
  mutate(year_band = create_year_band(year)) %>%
  group_by(year_band, ethnicity, stroke_type) %>%
  summarise(
    numerator = sum(numerator),
    denominator = sum(denominator),
    std_rate = numerator / denominator * 100000,
    se = sqrt(sum((se * denominator / 100000)^2)) / denominator * 100000,
    lower_ci = pmax(0, std_rate - 1.96 * se),
    upper_ci = std_rate + 1.96 * se,
    .groups = "drop"
  ) %>%
  mutate(label = paste0(stroke_type, "_ESP"),
         value = glue("{round(std_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year_band, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

# Add "All strokes" crude and ESP (aggregated by ethnicity and year band)
crude_all_band <- crude_incidence_sex_ethnicity_yearly %>%
  mutate(year_band = create_year_band(year)) %>%
  group_by(year_band, ethnicity) %>%
  summarise(
    cases = sum(cases),
    population = sum(population),
    crude_rate = (cases / population) * 100000,
    se = sqrt(cases) / population * 100000,
    lower_ci = pmax(0, crude_rate - 1.96 * se),
    upper_ci = crude_rate + 1.96 * se,
    .groups = "drop"
  ) %>%
  mutate(label = "All_Crude",
         value = glue("{round(crude_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year_band, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

esp_all_band <- esp_yearly_output %>%
  mutate(year_band = create_year_band(year)) %>%
  group_by(year_band, ethnicity) %>%
  summarise(
    numerator = sum(numerator),
    denominator = sum(denominator),
    std_rate = numerator / denominator * 100000,
    se = sqrt(sum((se * denominator / 100000)^2)) / denominator * 100000,
    lower_ci = pmax(0, std_rate - 1.96 * se),
    upper_ci = std_rate + 1.96 * se,
    .groups = "drop"
  ) %>%
  mutate(label = "All_ESP",
         value = glue("{round(std_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(year_band, ethnicity, label, value) %>%
  pivot_wider(names_from = label, values_from = value)

# Final join
supp_table3 <- crude_all_band %>%
  full_join(esp_all_band, by = c("year_band", "ethnicity")) %>%
  full_join(crude_band, by = c("year_band", "ethnicity")) %>%
  full_join(esp_band, by = c("year_band", "ethnicity")) %>%
  arrange(year_band, ethnicity)

# Render nicely
supp_table3 %>%
  kbl(caption = "Supplementary Table 3: Crude and ESP-standardised stroke incidence per 100,000, by 2-year bands and ethnicity",
      align = "l", booktabs = TRUE, longtable = TRUE) %>%
  kable_styling(latex_options = c("striped", "repeat_header"), full_width = FALSE)

# == Table 3 ==
library(dplyr)
library(glue)
library(tidyr)

# 1. Create 5-year bands
crude_all <- crude_incidence_sex_ethnicity_yearly %>%
  mutate(period = cut(year,
                      breaks = c(1994, 1999, 2004, 2009, 2014, 2019, 2024),
                      labels = c("1995–1999", "2000–2004", "2005–2009", "2010–2014", "2015–2019", "2020–2024"))) %>%
  group_by(period, sex, ethnicity) %>%
  summarise(
    crude_rate = mean(crude_rate),
    lower_ci = mean(lower_ci),
    upper_ci = mean(upper_ci),
    .groups = "drop"
  ) %>%
  mutate(label = "All_Crude",
         value = glue("{round(crude_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(period, sex, ethnicity, label, value)

esp_all <- esp_yearly_output %>%
  mutate(period = cut(year,
                      breaks = c(1994, 1999, 2004, 2009, 2014, 2019, 2024),
                      labels = c("1995–1999", "2000–2004", "2005–2009", "2010–2014", "2015–2019", "2020–2024"))) %>%
  group_by(period, sex, ethnicity) %>%
  summarise(
    std_rate = mean(std_rate),
    lower_ci = mean(lower_ci),
    upper_ci = mean(upper_ci),
    .groups = "drop"
  ) %>%
  mutate(label = "All_ESP",
         value = glue("{round(std_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(period, sex, ethnicity, label, value)

# 2. For subtypes
crude_subtypes <- crude_incidence_by_type_ethnicity %>%
  mutate(period = cut(year,
                      breaks = c(1994, 1999, 2004, 2009, 2014, 2019, 2024),
                      labels = c("1995–1999", "2000–2004", "2005–2009", "2010–2014", "2015–2019", "2020–2024"))) %>%
  group_by(period, sex, ethnicity, stroke_type) %>%
  summarise(
    crude_rate = mean(crude_rate),
    lower_ci = mean(lower_ci),
    upper_ci = mean(upper_ci),
    .groups = "drop"
  ) %>%
  mutate(label = paste0(stroke_type, "_Crude"),
         value = glue("{round(crude_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(period, sex, ethnicity, label, value)

esp_subtypes <- esp_incidence_by_type_ethnicity %>%
  mutate(period = cut(year,
                      breaks = c(1994, 1999, 2004, 2009, 2014, 2019, 2024),
                      labels = c("1995–1999", "2000–2004", "2005–2009", "2010–2014", "2015–2019", "2020–2024"))) %>%
  group_by(period, sex, ethnicity, stroke_type) %>%
  summarise(
    std_rate = mean(std_rate),
    lower_ci = mean(lower_ci),
    upper_ci = mean(upper_ci),
    .groups = "drop"
  ) %>%
  mutate(label = paste0(stroke_type, "_ESP"),
         value = glue("{round(std_rate, 1)} ({round(lower_ci, 1)}–{round(upper_ci, 1)})")) %>%
  select(period, sex, ethnicity, label, value)

# 3. Combine everything and pivot wide
combined_table <- bind_rows(crude_all, esp_all, crude_subtypes, esp_subtypes) %>%
  pivot_wider(names_from = label, values_from = value) %>%
  arrange(period, ethnicity, sex)

# 4. Optional: Export to Excel
writexl::write_xlsx(combined_table, "MainTable_Incidence_5yearBands.xlsx")







