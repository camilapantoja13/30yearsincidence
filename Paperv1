  year = 1995,
  sex = c("Male", "Female"),
  ethnicity = "White",
  age_group = NA,  # we can leave it out if not splitting by age
  cases = c(round(misassigned_cases / 2), misassigned_cases - round(misassigned_cases / 2))
)

